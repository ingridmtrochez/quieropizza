@model List<QuieroPizza.BL.Producto>
@{
    ViewBag.Title = "Index";
}

<h2>Productos</h2>

@foreach (var producto in Model)
{
    <p>@producto.Descripción</p>
}

<table class="table table-bordered table-hover">
    <thead>
           <tr>
               <th>
                   Código
               </th>
               <th>
                   Descripción
               </th>
               <th>
                   Precio
               </th>
           </tr>
    </thead>   
    
    @foreach (var producto in Model)
    {
        <tr>
            <td>@producto.Id</td>
            <td>@producto.Descripción</td>
            <td>@producto.Precio</td>
        </tr>
    }

</table>